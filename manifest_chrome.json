{
  "manifest_version": 3,
  "name": "Elden Email",
  "version": "1.1.2",
  "description": "Shows an Elden Ring banner when you send an email",
  "permissions": ["storage"],
   "action": {
      "default_popup": "popup.html",
      "default_icon": {
        "48": "assets/icon.png"
      }
   },
    "host_permissions": [
      "https://mail.google.com/*",
      "https://outlook.office.com/*",
      "https://outlook.live.com/*",
      "https://outlook.office365.com/*",
      "https://mail.proton.me/*",
      "https://mail.aol.com/*"
    ],
  "content_scripts": [
    {
      "matches": [
        "https://mail.google.com/*",
        "https://outlook.office.com/*",
        "https://outlook.live.com/*",
        "https://outlook.office365.com/*",
        "https://mail.proton.me/*",
        "https://mail.aol.com/*"
      ],
      "js": ["content.js"],
      "css": ["style.css"],
      "all_frames": true
    }
  ],
  "icons": {
    "48": "assets/icon.png"
  },
  "web_accessible_resources": [
    {
      "resources": ["assets/email_sent_yellow.png", "assets/email_sent_blue.png", "assets/email_sent_red.png","assets/elden_ring_sound.mp3", "assets/Matinia.otf"],
      "matches": [
        "https://mail.google.com/*",
        "https://outlook.office.com/*",
        "https://outlook.live.com/*",
        "https://outlook.office365.com/*",
        "https://mail.proton.me/*",
        "https://mail.aol.com/*"
      ]
    }
  ]
}

